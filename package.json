{
  "name": "foglet-core",
  "version": "4.0.0",
  "description": "Core of the foglet library",
  "main": "./foglet-core.js",
  "scripts": {
    "lint": "eslint src/",
    "esdoc": "esdoc",
    "all": "npm run build && npm test && npm run esdoc",
    "test": "foglet-scripts test",
    "server": "foglet-scripts start",
    "build": "foglet-scripts build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ran3d/foglet-core.git"
  },
  "keywords": [
    "foglet",
    "spray-wrtc",
    "browser-to-browser",
    "webRTC",
    "foglet computing"
  ],
  "author": "Folkvir",
  "contributors": [
    "Chat Wane (https://github.com/Chat-Wane)",
    "Thomas Minier (https://github.com/Callidon)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ran3d/foglet-core/issues"
  },
  "foglet-scripts": {
    "browsers": [
      "Firefox"
    ],
    "timeout": 20000,
    "lint": false,
    "build": {
      "entry": "./foglet-core.js",
      "output": {
        "filename": "foglet.bundle.js",
        "library": "foglet",
        "libraryTarget": "umd",
        "umdNamedDefine": true
      }
    }
  },
  "homepage": "https://github.com/ran3d/foglet-core#readme",
  "dependencies": {
    "debug": "^3.1.0",
    "lodash.merge": "^4.6.0",
    "lodash.sortedindexby": "^4.6.0",
    "readable-stream": "^2.3.3",
    "socket.io-client": "^2.0.3",
    "spray-wrtc": "^2.0.2",
    "tman-wrtc": "0.0.8",
    "unicast-definition": "^2.0.0",
    "uuid": "^3.0.1",
    "version-vector-with-exceptions": "^0.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "esdoc": "^1.0.3",
    "esdoc-node": "^1.0.2",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^4.9.0",
    "foglet-scripts": "^0.2.3",
    "karma-firefox-launcher": "^1.0.0"
  },
  "bundledDependencies": [
    "debug",
    "lodash.merge",
    "lodash.sortedindexby",
    "readable-stream",
    "socket.io-client",
    "spray-wrtc",
    "unicast-definition",
    "uuid",
    "version-vector-with-exceptions"
  ]
}

{
  "name": "foglet-core",
  "version": "2.0.2",
  "description": "Core of the foglet library",
  "main": "src/foglet.js",
  "scripts": {
    "esdoc": "esdoc && npm run esdoc:example",
    "esdoc:example": "cp -R ./dist ./example ./docs",
    "all": "npm run build:foglet && npm test && npm run esdoc",
    "test": "npm run karma",
    "karma": "karma start karma.config.js",
    "server": "node node_modules/foglet-signaling-server/express-signaling-server.js",
    "build:foglet": "browserify -r ./src/foglet.js:foglet -t [ babelify --presets [ es2015 ] ]   > ./dist/foglet.bundle.js",
    "build:watch": "watchify -r ./src/foglet.js:foglet -t [ babelify --presets [ es2015 ] ]  -o ./dist/foglet.bundle.js -v -d "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ran3d/foglet-core.git"
  },
  "keywords": [
    "spray-wrtc",
    "browser-to-browser",
    "webRTC"
  ],
  "author": "Folkvir",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ran3d/foglet-core/issues"
  },
  "homepage": "https://github.com/ran3d/foglet-core#readme",
  "dependencies": {
    "debug": "^2.6.8",
    "esdoc-node": "^1.0.2",
    "eslint-config-airbnb-base": "^11.2.0",
    "express": "^4.15.3",
    "fcn-wrtc": "^2.0.4",
    "immutable": "^3.8.1",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.1.1",
    "lodash": "^4.17.4",
    "lru-cache": "^4.0.2",
    "mocha": "^3.4.1",
    "n2n-overlay-wrtc": "git+https://github.com/ran3d/n2n-overlay-wrtc.git#merging",
    "neighborhood-wrtc": "git+https://github.com/ran3d/neighborhood-wrtc.git#merging",
    "q": "^1.4.1",
    "serialize-javascript": "^1.3.0",
    "socket.io": "^1.7.4",
    "socket.io-client": "^1.7.4",
    "spray-wrtc": "git+https://github.com/ran3d/spray-wrtc.git#merging",
    "unicast-definition": "git+https://github.com/ran3d/unicast-definition.git",
    "uuid": "^3.0.1",
    "vivaldi-coordinates": "^1.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.24.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-register": "^6.24.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "browserify-istanbul": "^2.0.0",
    "chai": "^3.5.0",
    "envify": "^4.0.0",
    "esdoc": "^0.5.2",
    "esdoc-node": "^1.0.1",
    "eslint": "^3.13.1",
    "eslint-config-airbnb-base": "^11.0.1",
    "eslint-plugin-import": "^2.2.0",
    "foglet-signaling-server": "^0.2.0",
    "istanbul": "^0.4.5",
    "jquery": "^3.1.1",
    "karma": "^1.3.0",
    "karma-browserify": "^5.1.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-coveralls": "^1.1.2",
    "karma-express-http-server": "0.0.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.2.0",
    "karma-mocha-reporter": "^2.2.0",
    "karma-socketio-server": "^1.0.0",
    "mocha": "^3.1.2",
    "nyc": "^8.3.2",
    "watchify": "^3.7.0"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "bundledDependencies": [
    "spray-wrtc",
    "fcn-wrtc",
    "unicast-definition",
    "debug",
    "express",
    "fcn-wrtc",
    "immutable",
    "lodash",
    "lru-cache",
    "q",
    "serialize-javascript",
    "socket.io",
    "socket.io-client",
    "uuid",
    "vivaldi-coordinates",
    "n2n-overlay-wrtc",
    "neighborhood-wrtc"
  ]
}

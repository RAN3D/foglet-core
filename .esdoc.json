{
  "source":"./src",
  "destination":"./docs",
  "package": "./package.json",
  "plugins": [
    {
      "name": "esdoc-standard-plugin",
      "options": {
        "lint": {"enable": true},
        "coverage": {"enable": false},
        "accessor": {
          "access": ["public", "protected"],
          "autoPrivate": true
        },
        "undocumentIdentifier": {"enable": true},
        "unexportedIdentifier": {"enable": false},
        "typeInference": {"enable": true},
        "brand": {
          "title": "Foglet-core",
          "description": "Core Infrastructure for developping fog computing applications",
          "repository": "https://github.com/ran3d/foglet-core",
          "site": "https://github.com/ran3d/foglet-core",
          "author": "https://github.com/ran3d/"
        },
        "manual": {
          "index": "./README.md",
          "globalIndex": true
        }
      }
    },
    {"name": "esdoc-node"}
  ]
}
